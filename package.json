{
  "name": "btc-wallet-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:unsigned": "npm run dev --workspace=btc-unsigned",
    "dev:signer": "npm run dev --workspace=btc-signer",
    "dev:signerHttps": "npm run dev --workspace=btc-signer --experimental-https",
    "build:unsigned": "npm run build --workspace=btc-unsigned",
    "build:signer": "npm run build --workspace=btc-signer",
    "build:all": "npm run build --workspaces",
    "lint:all": "npm run lint --workspaces",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "lucide-react": "^0.539.0"
  }
}
